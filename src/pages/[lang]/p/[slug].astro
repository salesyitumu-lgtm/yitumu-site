---
import Base from '../../../layouts/Base.astro';
import { getCollection } from 'astro:content';
import { assertLocale, pickByLocale, youtubeEmbed } from '../_util';

function normalizeImages(images: any): string[] {
  if (!Array.isArray(images)) return [];
  return images
    .map((x) => {
      if (typeof x === 'string') return x;
      if (x && typeof x === 'object') return x.image || x.src || x.url || '';
      return '';
    })
    .filter(Boolean);
}

export async function getStaticPaths() {
  const langs = ['en','es','fr','de','it'];
  const productsAll = await getCollection('products');
  const active = productsAll.filter(p => p.data.status === 'active');

  const paths: any[] = [];
  for (const lang of langs) {
    for (const p of active) {
      paths.push({ params: { lang, slug: p.slug } });
    }
  }
  return paths;
}

const { lang, slug } = Astro.params;
if (!lang || !assertLocale(lang)) throw new Error('Invalid lang');

const settings = (await getCollection('settings'))[0]?.data;
const ui = {
  blog: pickByLocale(settings ?? {}, lang, 'nav_blog') ?? 'Blog',
  about: pickByLocale(settings ?? {}, lang, 'nav_about') ?? 'About',
  contact: pickByLocale(settings ?? {}, lang, 'nav_contact') ?? 'Contact',
  langLabel: pickByLocale(settings ?? {}, lang, 'lang_label') ?? 'Language'
};

const catsAll = await getCollection('categories');
const nav = catsAll
  .filter(c => c.data.enabled)
  .sort((a,b)=> (a.data.order ?? 999) - (b.data.order ?? 999))
  .map(c => ({
    slug: c.slug,
    label: (c.data as any)[`name_${lang}`] ?? c.data.name_en,
    href: `/${lang}/${c.slug}/`
  }));

const productsAll = await getCollection('products');
const p = productsAll.find(x => x.slug === slug);
if (!p) return new Response('Not Found', { status: 404 });

const title = (p.data as any)[`title_${lang}`] ?? p.data.title_en ?? p.slug;
const features = ((p.data as any)[`features_${lang}`] ?? p.data.features_en ?? []) as string[];
const body = ((p.data as any)[`body_${lang}`] ?? p.data.body_en ?? '') as string;

const images = normalizeImages((p.data as any).images);
const cover = images[0] ?? null;

let embedUrl: string | null = null;
if ((p.data as any).video_provider === 'youtube') {
  embedUrl = youtubeEmbed((p.data as any).video_value);
} else if ((p.data as any).video_provider === 'cloudflare_stream') {
  embedUrl = (p.data as any).video_value ?? null;
}

const whatsappDigits = settings?.whatsapp_number ? String(settings.whatsapp_number).replace(/[^0-9]/g,'') : '';
const catSlug = (p.data as any).category ?? '';
const cat = catsAll.find(c => c.slug === catSlug);
const catLabel = cat ? ((cat.data as any)[`name_${lang}`] ?? cat.data.name_en) : catSlug;
---

<Base title={title} lang={lang} nav={nav} settings={settings} ui={ui}>
  <section class="hero">
    <div class="grid">
      <div class="card">
        <h1>{title}</h1>

        <p class="muted pmeta">
          {catSlug ? (
            <>
              Category:
              <a href={`/${lang}/${catSlug}/`}>{catLabel}</a>
            </>
          ) : null}
          {(p.data as any).model ? <span> · Model: {(p.data as any).model}</span> : null}
          {(p.data as any).moq ? <span> · MOQ: {(p.data as any).moq}</span> : null}
        </p>

        {images.length ? (
          <>
            {/* 主图：1:1 正方形，点击打开原图 */}
            <a class="heroimg" href={cover ?? images[0]} target="_blank" rel="noopener">
              <img
                src={cover ?? images[0]}
                alt={`${title} - main image`}
                width="1000"
                height="1000"
                loading="eager"
                decoding="async"
                fetchpriority="high"
              />
            </a>

            {/* 多图：缩略图墙 */}
            {images.length > 1 ? (
              <div class="thumbs" role="list">
                {images.slice(1).map((img, idx) => (
                  <a class="thumb" href={img} target="_blank" rel="noopener" role="listitem" aria-label={`${title} image ${idx + 2}`}>
                    <img
                      src={img}
                      alt={`${title} - image ${idx + 2}`}
                      width="600"
                      height="600"
                      loading="lazy"
                      decoding="async"
                    />
                  </a>
                ))}
              </div>
            ) : null}
          </>
        ) : (
          <p class="note">No images yet. Add in /admin → 产品管理 → 产品图.</p>
        )}

        {embedUrl ? (
          <>
            <div class="hr"></div>
            <h2>Product Video</h2>
            <div class="embed">
              <iframe src={embedUrl} allow="autoplay; encrypted-media; picture-in-picture" allowfullscreen></iframe>
            </div>
          </>
        ) : null}

        <div class="hr"></div>
        <div class="row">
          <a class="btn" href={`/${lang}/contact/?product=${encodeURIComponent(title)}`}>Request a Quote</a>
          {whatsappDigits ? (
            <a class="btn" href={`https://wa.me/${whatsappDigits}`} target="_blank">
              {settings?.whatsapp_label ?? 'WhatsApp'}
            </a>
          ) : null}
          <a
            class="btn"
            href={`mailto:${settings?.sales_email ?? 'sales@yitumuglobal.com'}?subject=${encodeURIComponent('Inquiry: '+title)}`}
          >
            Email
          </a>
        </div>
      </div>

      <div class="card">
        <h2>Key Features</h2>
        {features.length ? (
          <ul class="muted">
            {features.map(f => <li>{f}</li>)}
          </ul>
        ) : (
          <p class="note">No features yet. Add “features_en / features_{lang}” in CMS.</p>
        )}

        <div class="hr"></div>
        <h2>Description</h2>
        {body ? (
          <div class="prose muted" set:html={body}></div>
        ) : (
          <p class="note">No description yet. Add “body_en / body_{lang}” in CMS.</p>
        )}
      </div>
    </div>
  </section>

  <style>
    .pmeta{ margin-top:6px; }

    /* 主图：固定 1:1，保证你看到的就是“1000x1000视觉” */
    .heroimg{
      display:block;
      margin-top:12px;
      border-radius:14px;
      overflow:hidden;
      border:1px solid var(--border);
      background: rgba(255,255,255,.03);
    }
    .heroimg img{
      width:100%;
      aspect-ratio: 1 / 1;
      height:auto;
      object-fit:cover; /* 想“完整显示不裁切”，改成 contain */
      display:block;
    }

    /* 缩略图墙 */
    .thumbs{
      display:grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap:10px;
      margin-top:10px;
    }
    .thumb{
      display:block;
      border-radius:12px;
      overflow:hidden;
      border:1px solid rgba(255,255,255,.10);
      background: rgba(255,255,255,.02);
    }
    .thumb img{
      width:100%;
      aspect-ratio: 1 / 1;
      height:auto;
      object-fit:cover;
      display:block;
    }

    /* 详情排版 */
    .prose :global(p){ margin: 10px 0; }
    .prose :global(ul){ margin: 10px 0; padding-left: 18px; }
    .prose :global(li){ margin: 6px 0; }
    .prose :global(h1), .prose :global(h2), .prose :global(h3){
      margin: 14px 0 8px;
      line-height: 1.25;
    }
    .prose :global(img){
      max-width:100%;
      height:auto;
      border-radius:14px;
      border:1px solid rgba(255,255,255,.10);
    }
  </style>
</Base>
