    .imggrid{
      display:grid;
      grid-template-columns: 1fr;
      gap: 12px;
      margin-top: 12px;
    }
    .imggrid img{
      width:100%;
      max-width:100%;
      border-radius:14px;
      border:1px solid var(--border);
      display:block;
      object-fit:cover;
    }

